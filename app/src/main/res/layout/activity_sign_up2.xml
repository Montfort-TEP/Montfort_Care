<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp2"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="342dp"
        android:layout_height="521dp"
        android:background="@drawable/signup_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.576">

        <TextView
            android:id="@+id/Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/Gender"
            android:textAlignment="center"
            android:textSize="24sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="@string/male"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/female"/>
            <RadioButton
                android:layout_marginStart="25dp"
                android:layout_marginEnd="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other"/>
        </RadioGroup>

        <TextView
            android:id="@+id/pLangTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="@string/languagesKnown"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/pHindi"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Hindi"
                />

            <CheckBox
                android:id="@+id/pEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/English"/>

            <CheckBox
                android:id="@+id/pMarathi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Marathi" />
        </LinearLayout>

        <TextView
            android:id="@+id/cLangTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="@string/languagesUsed"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cHindi"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Hindi"
                />

            <CheckBox
                android:id="@+id/cEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/English"/>

            <CheckBox
                android:id="@+id/cMarathi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Marathi" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/therapyTV"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="@string/Therapy"
            android:textAlignment="center"
            android:textSize="24sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:id="@+id/therapyYes"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="@string/Yes"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/therapyNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/No" />
        </RadioGroup>

        <EditText
            android:id="@+id/hearinglossAge"
            android:layout_width="316dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/ageDetected"
            android:inputType="number"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/cAge"
            android:layout_width="316dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="@string/childAge"
            android:inputType="number"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/hearingaidAge"
            android:layout_width="316dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="@string/hearingAidFitted"
            android:inputType="number"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/signupButton2"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:fontFamily="@font/alice"
        android:text="@string/cont"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.307" />

    <!-- AUDIOGRAM + "Take Asessment" still left, not sure how to do the AUDIOGRAM -->
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectYears">

    <TextView
        android:id="@+id/stage_identified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/place_holder_text"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"/>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="356dp"
        android:layout_height="207dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stage_identified" />

    <Button
        android:id="@+id/selectyear_bt1"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/place_holder_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView" />

    <Button
        android:id="@+id/selectyear_bt2"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="@string/place_holder_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@+id/selectyear_bt1" />

    <Button
        android:id="@+id/selectyear_bt3"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="@string/place_holder_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectyear_bt2" />
</androidx.constraintlayout.widget.ConstraintLayout>
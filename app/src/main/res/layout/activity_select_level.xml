<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".select_level">

    <TextView
        android:id="@+id/year_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/place_holder_text"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/months_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/place_holder_text"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year_textview"
        android:textColor="@android:color/black"/>

    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="356dp"
        android:layout_height="207dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/months_txt" />

    <Button
        android:id="@+id/selectlevel_bt1"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Level 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView2" />

    <Button
        android:id="@+id/selectlevel_bt2"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="Level 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@+id/selectlevel_bt1" />

    <Button
        android:id="@+id/selectlevel_bt3"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="Level 3"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectlevel_bt2" />

    <Button
        android:id="@+id/selectlevel_bt4"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Level 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectlevel_bt3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>